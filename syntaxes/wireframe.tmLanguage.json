{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Wireframe",
  "scopeName": "source.wireframe",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#booleans" },
    { "include": "#layout-keywords" },
    { "include": "#components" },
    { "include": "#attributes" },
    { "include": "#brackets" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.wireframe",
          "match": "//.*$"
        },
        {
          "name": "comment.block.wireframe",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.wireframe",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.wireframe",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.wireframe",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.wireframe",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.wireframe",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.wireframe",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "layout-keywords": {
      "patterns": [
        {
          "name": "keyword.control.layout.wireframe",
          "match": "\\b(page|header|main|footer|sidebar|section|row|col)\\b"
        }
      ]
    },
    "components": {
      "patterns": [
        {
          "name": "support.class.component.container.wireframe",
          "match": "\\b(card|modal|drawer|accordion)\\b"
        },
        {
          "name": "support.class.component.text.wireframe",
          "match": "\\b(text|title|link)\\b"
        },
        {
          "name": "support.class.component.input.wireframe",
          "match": "\\b(input|textarea|select|checkbox|radio|switch|slider)\\b"
        },
        {
          "name": "support.class.component.button.wireframe",
          "match": "\\b(button|button-group)\\b"
        },
        {
          "name": "support.class.component.display.wireframe",
          "match": "\\b(image|icon|avatar|badge|placeholder)\\b"
        },
        {
          "name": "support.class.component.data.wireframe",
          "match": "\\b(table|list)\\b"
        },
        {
          "name": "support.class.component.feedback.wireframe",
          "match": "\\b(alert|toast|progress|spinner)\\b"
        },
        {
          "name": "support.class.component.overlay.wireframe",
          "match": "\\b(tooltip|popover|dropdown)\\b"
        },
        {
          "name": "support.class.component.nav.wireframe",
          "match": "\\b(nav|tabs|breadcrumb|pagination)\\b"
        },
        {
          "name": "support.class.component.divider.wireframe",
          "match": "\\b(divider)\\b"
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "variable.parameter.layout.wireframe",
          "match": "\\b(span|sm|md|lg|xl|order)\\b"
        },
        {
          "name": "variable.parameter.flex.wireframe",
          "match": "\\b(flex|direction|justify|align|wrap|gap)\\b"
        },
        {
          "name": "variable.parameter.spacing.wireframe",
          "match": "\\b(p|m|pt|pr|pb|pl|px|py|mt|mr|mb|ml|mx|my)\\b"
        },
        {
          "name": "variable.parameter.size.wireframe",
          "match": "\\b(w|h|minW|maxW|minH|maxH)\\b"
        },
        {
          "name": "variable.parameter.variant.wireframe",
          "match": "\\b(primary|secondary|outline|ghost|danger|success|warning|info)\\b"
        },
        {
          "name": "variable.parameter.state.wireframe",
          "match": "\\b(disabled|required|checked|active|expanded|open|collapsed|fixed|vertical|horizontal|ordered|striped|bordered|hover|muted|external|pill)\\b"
        },
        {
          "name": "variable.parameter.common.wireframe",
          "match": "\\b(variant|color|size|type|placeholder|value|label|level|name|src|alt|href|items|columns|rows|options|min|max|position)\\b"
        }
      ]
    },
    "brackets": {
      "patterns": [
        {
          "name": "punctuation.definition.block.wireframe",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.array.wireframe",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.definition.parameters.wireframe",
          "match": "[()]"
        },
        {
          "name": "punctuation.separator.wireframe",
          "match": "[,:]"
        },
        {
          "name": "keyword.operator.assignment.wireframe",
          "match": "="
        }
      ]
    }
  }
}
